<resources>

    <!--http://www.hidroh.com/2015/02/25/support-multiple-themes-android-app-part-2/-->

    <!-- DARK base theme -->
    <style name="AppTheme.Dark" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryInverse</item>
        <item name="android:textColorSecondaryInverse">@color/textColorSecondaryInverse</item>

        <item name="appbarMenuIconColor">@color/appbarIconColorLight</item>
    </style>

    <!-- LIGHT base theme -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="appbarMenuIconColor">@color/appbarIconColorDark</item>
    </style>

    <!-- APPBAR style -->
    <style name="AppToolBar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <!-- OUTLINE fragment styles -->
    <style name="OutlineCardViewPrimaryText">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="OutlineCardViewSecondaryText">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
